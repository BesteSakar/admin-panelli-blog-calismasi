@model IEnumerable<BlogYonetim.Models.Category>

    @{
        ViewData["Title"] = "Category";
    }


    <button type="button" onclick="$('#CategoryModal').modal('show')" class="btn btn-primary" data-toggle="modal">Kategori Ekle</button>

    <table class="table table-hover">
        <thead>
        <th scope="col">id</th>
        <th scope="col">Name</th>
        <th scope="col"></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.id</th>
                <td>@item.Name</td>
                <td><a class="btn btn-danger" asp-route-id="@item.id" asp-action="DeleteCategory">Sil</a>

            </tr>
            }
        </tbody>
    </table>



    <div class="modal" id="CategoryModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kategori:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <form method="POST" action="/Home/AddCategory">
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="hidden" name="id" class="form-control" />
                            <input type="text" name="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

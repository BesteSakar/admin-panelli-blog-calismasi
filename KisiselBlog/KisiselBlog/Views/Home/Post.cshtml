@model KisiselBlog.Models.Blog
<div class="container">
<header class="masthead" style="background-image: url('@Model.ImagePath')">
<div class="overlay"></div>
<div class="container">
<div class="row">
<div class="col-lg-8 col-md-10 mx-auto">
<div class="post-heading">
<h1>@Model.Title</h1>
<h2 class="subheading">@Model.Subtitle</h2>
<span class="meta">Posted by
@Model.Author.Name
</span>
</div>
</div>
</div>
</div>
</header>
<div class="container">
<!-- Post Content -->
<article>
<div class="container">
<div class="row">
<div class="col-lg-8 col-md-10 mx-auto">
@Html.Raw(Model.Content)
</div>
</div>
</div>
</article>
</div>
</div>
